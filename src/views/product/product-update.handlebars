<form action="/product/update/{{product.id}}" method="POST">
        <div>
          <div class="row g-2">
            <div class="col mb-3">
              <label class="form-label">Nomi</label>
              <input
                type="text"
                value = "{{product.name}}"
                min="1"
                name="name"
                class="form-control"
                autocapitalize="true"
                autofocus="true"
                required
              />
            </div>
            <div class="col mb-3">
              <label class="form-label">Qolgan</label>
              <input
                value="{{product.amount}}"
                type="number"
                min="1"
                name="amount"
                class="form-control"
                autocomplete="off"
                required
              />
            </div>
          </div>
          <div class="row g-2">
            <div class="col mb-3">
              <label class="form-label">Narxi</label>
              <input type="number" min="1" name="price" class="form-control"  value = "{{product.price}}" required/>
            </div>
            <div class="col mb-3">
              <label class="form-label">Oldingi Narxi</label>
              <input type="number" min="1" name="price_old" class="form-control" value = "{{product.price_old}}" required/>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <button class="btn btn-primary" type="submit">Yuborish</button>
        </div>
      </form>
